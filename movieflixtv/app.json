{
  "expo": {
    "name": "MovieFlix TV",
    "slug": "movieflix",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "orientation": "landscape",
    "icon": "./assets/images/app-icon.png",
    "scheme": "movieflixtv",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.movieflix.tv",
      "backgroundColor": "#05060f"
    },
    "android": {
      "package": "com.movieflix.tv",
      "adaptiveIcon": {
        "backgroundColor": "#E53935",
        "foregroundImage": "./assets/images/adaptive-foreground.png"
      },
      "backgroundColor": "#05060f",
      "edgeToEdgeEnabled": true
    },
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#05060f"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#05060f",
          "dark": {
            "image": "./assets/images/splash.png",
            "backgroundColor": "#05060f"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fec9b894-ee58-40d6-bae2-b8e839912ee4"
      }
    },
    "owner": "mzazimhenga"
  }
}
